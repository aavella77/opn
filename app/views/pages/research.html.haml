.row
  .col-md-12
    / Button trigger modal
    %button.btn.btn-primary.btn-sm.pull-right{"data-target" => "#myModal", "data-toggle" => "modal", :style => "margin-top: 20px;"}
      Launch Demo Video

    .pull-left{:style => "font-size: 36px; font-weight: 500;"}
      = @page_title || action_name.capitalize


    .clearfix

    %hr/

    / Modal
    #myModal.modal{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"data-dismiss" => "modal", type: "button"}
              %span{"aria-hidden" => "true"} Ã—
              %span.sr-only Close
            %h4#myModalLabel.modal-title Demo Video
          .modal-body
            = image_tag "demo-video.png", :style => "width: 100%;"
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close




.row
  .col-md-9

    - if current_user
      .panel.panel-default
        .panel-heading
          %h3.panel-title Dashboard

        .panel-body
          .row
            .col-md-4.text-center
              = image_tag "pie.png", :style => "height: 150px;"
              %h4 Surveys Completed
              .req num_surveys_completed, num_surveys_available_since_date
            .col-md-4.text-center
              = image_tag "donut.png", :style => "height: 150px;"
              %h4 Karma
            .col-md-4.text-center
              = image_tag "gauge.png", :style => "height: 150px;"
              %h4 Data Sources
              .req num_data_sources_connected

      .panel.panel-success
        .panel-heading
          %h3.panel-title New Surveys
          .req surveys_ready_for_completion (title of survey, url to survey)

        %table.table.table-hover.table-responsive
          %tbody
            %tr.success
              %td
                %h4
                  %i.fa.fa-square
              %td
                %h4 Have you ever done SCD?
              %td.text-right
                - if ccfa_pprn?
                  %a.btn.btn-success.btn-sm{:href => external_link_warning_path} Complete Survey
                - else
                  .btn.btn-success.btn-sm Complete Survey

            %tr.success
              %td
                %h4
                  %i.fa.fa-square
              %td
                %h4 How does your Gender affect IBD?
              %td.text-right
                - if ccfa_pprn?
                  %a.btn.btn-success.btn-sm{:href => external_link_warning_path} Complete Survey
                - else
                  .btn.btn-success.btn-sm Complete Survey

      %a{:href=> data_path}
        .panel.panel-warning
          .panel-heading
            %h3.panel-title Connect Your Other Health Data Accounts
            .req surveys_ready_for_completion (title of survey, url to survey)
            %br/
            .small Connect other health accounts like FitBit, Crohnology, PatientsKnowBest, and others to pull your data together to help research.

    -# publicly viewable
    = render :partial => "research_topics", :locals => { :editable => false }




  - if current_user
    .col-md-3
      = render :partial => "notifications", :locals => { :editable => false }

