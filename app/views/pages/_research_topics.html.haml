
.panel.panel-default
  .panel-heading
    %h3.panel-title Research Proposals

  .panel-body

    .col-md-6
      .research-list-heading
        %h4 Research Currently Investigating
        %p.small These are research topics the team is currently researching. Please indicate if you are interested in participating.
      %table.table.table-responsive
        %tbody
          - i = 0
          - @pprn_research_questions.each do |title|
            %tr
              %td.col-md-1
                %h2= i+=1
              %td.col-md-11
                %a{:href => "/research_question"}
                  %h4
                    = title
                - if editable
                  %button.btn.btn-danger.btn-xs.pull-right Delete
                  %button.btn.btn-warning.btn-xs.pull-right Edit
                  .clearfix


    .col-md-6
      .research-list-heading
        %h4 Research Newly Suggested
        %p.small These are research topics proposed by patients that are currently open for comment and refinement.
      %table.table.table-responsive
        %tbody
          - i = 0
          - @pprn_research_questions.shuffle.each do |title|
            %tr
              %td.col-md-1
                %h2= i+=1
              %td.col-md-11
                %a{:href => "/research_question"}
                  %h4
                    = title
                - if editable
                  %button.btn.btn-danger.btn-xs.pull-right Delete
                  %button.btn.btn-warning.btn-xs.pull-right Edit
                  .clearfix



  .panel-footer{:style=> "padding-bottom: 0px; padding-right: 8px; padding-top: 5px;"}
    .text-center
      %ul.pagination.pagination-sm{:style=> "margin: 0px;"}
        %li
          %span &laquo;
        %li.disabled
          %span ...
        %li
          %span &raquo;
