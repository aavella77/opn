.navbar.navbar-default{role: "navigation"}
  -#.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"}
        = @pprn_title
        %span.req
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if current_user
          %li{:class => "#{"active" if @active_top_nav_link == :research}"}
            %a{href: "/research_karma"} Research
        - else
          %li{:class => "#{"active" if @active_top_nav_link == :research_topics}"}
            %a{href: "/research_topics"} Research

        %li{:class => "#{"active" if @active_top_nav_link == :health_data}"}
          %a{href: "/data_explore"} My Health Data
        %li{:class => "#{"active" if @active_top_nav_link == :social}"}
          %a{href: "/social"} Patients
        %li{:class => "#{"active" if @active_top_nav_link == :blog}"}
          %a{href: "/blog"} Blog
        %li{:class => "#{"active" if action_name == "content"}"}
          %a{href: "/content/about_partners"} About


      %ul.nav.navbar-nav.pull-right
        %li
          %a.req{href: "/req", style: "display:none !important; color: red;"}


        - if current_user
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              My Settings
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href: "/account"}
                  %i.fa.fa-user &nbsp; Account Settings
              - if current_user.can?(:view_admin_dashboard)
                %li
                  %a{href: "/admin", :title => "Admin Panel"}
                    %i.fa.fa-wrench &nbsp; Admin Panel
              %li
                = link_to "<i class='fa fa-sign-out'></i> Sign out".html_safe, main_app.destroy_user_session_path, :method => :delete
        - else
          %li
            %a{:href => new_user_session_path}
              %i.fa.fa-sign-in
                Sign In