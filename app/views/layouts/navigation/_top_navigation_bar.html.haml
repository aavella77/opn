.navbar.navbar-default{role: "navigation"}
  -#.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path}
        = @pprn_title
        %span.req
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{:class => "#{"active" if @active_top_nav_link == :research}"}
          %a{href: research_topics_path} Research
        %li{:class => "#{"active" if @active_top_nav_link == :health_data}"}
          %a{href: data_explore_path} My Health Data
        %li{:class => "#{"active" if @active_top_nav_link == :social}"}
          %a{href: social_path} Patients
        %li{:class => "#{"active" if @active_top_nav_link == :blog}"}
          %a{href: blog_path} Blog
        %li{:class => "#{"active" if action_name == "content"}"}
          %a{href: content_path(page: "about_partners")} About


      %ul.nav.navbar-nav.pull-right

        - if current_user
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              My Settings
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href: account_path}
                  %i.fa.fa-user &nbsp; Account Settings
              - if current_user.can?(:view_admin_dashboard)
                %li
                  %a{href: admin_path, :title => "Admin Panel"}
                    %i.fa.fa-wrench &nbsp; Admin Panel
              %li
                = link_to "<i class='fa fa-sign-out'></i> Sign out".html_safe, main_app.destroy_user_session_path, :method => :delete
        - else
          %li
            %a{:href => new_user_session_path}
              %i.fa.fa-sign-in
                Sign In