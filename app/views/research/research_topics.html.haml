.row
  - if current_user
    .col-md-12
      .well
        %i.fa.fa-check-square-o.pull-left{:style => "font-size: 60px;"}

        %h3
          You have
          = current_user.vote_quota
          Votes to cast today.
        %p
          You have cast
          = current_user.todays_votes.length
          of them.


        .progress
          .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => current_user.available_votes_percent, :role => "progressbar", :style => "width: #{current_user.available_votes_percent}%"}
            %span.sr-only
              = current_user.available_votes_percent
              \% Complete
%br/

%ul.nav.nav-tabs.nav-justified{role: "tablist"}
  %li.active
    %a{"data-toggle" => "tab", href: "#popular", role: "tab"} Most Votes
  - if current_user
    %li
      %a{"data-toggle" => "tab", href: "#mine", role: "tab"} My Votes
  %li
    %a{"data-toggle" => "tab", href: "#newest", role: "tab"} Newest

/ Tab panes
.tab-content
  #popular.tab-pane.active= render partial: "shared/research_topics", locals: {research_questions: Vote.popular_research_questions, editable: false}
  - if current_user
    #mine.tab-pane= render partial: "shared/research_topics", locals: {research_questions: Vote.user_research_questions(current_user), editable: false}
  #newest.tab-pane= render partial: "shared/research_topics", locals: {research_questions: Vote.new_research_questions, editable: false}






