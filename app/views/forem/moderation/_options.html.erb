<div class="btn-group" data-toggle="buttons">
  <label class="btn btn-success btn-xs">
    <%= f.radio_button "moderation_option", "approve" %>
    <%=  t('approve', :scope => 'forem.posts.moderation') %>
  </label>
  <label class="btn btn-danger btn-xs">
    <%= f.radio_button "moderation_option", "spam" %>
    <%=  t('spam', :scope => 'forem.posts.moderation') %>
  </label>
</div>

<%= f.submit t('moderate', :scope => 'forem.posts.moderation'), :class => "btn btn-primary btn-xs" %>
