- blog_posts.each do |post|
  .panel.panel-default.panel-disabled
    .panel-heading
      .row
        .col-md-1
          = image_tag post.user.photo_url, :class => "img-responsive img-thumbnail"
        .col-md-11
          =link_to blog_path do
            %h4.media-heading = post.title
          %small
            = post.user.social_profile.nickname
          %br
          %small
            %strong= post.created_at.strftime("%m/%d/%Y")

    .panel-body
      %p= post.introduction
      - if short
        %p= link_to "Read more...", blog_path
      - else
        = post.body

    .panel.panel-default
      .panel-body
        .media
          %a.pull-left

          .media-body
            %a
              %h4.media-heading= post.title
            %small
              %strong= post.post_date
            = markdown post.body
            - if editable
              %button.btn.btn-danger.btn-xs.pull-right Delete
              %button.btn.btn-warning.btn-xs.pull-right Edit
              .clearfix

- if editable
  = render partial: 'shared/posts_form', locals: { post: Post.new(type: :blog) }
